{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "types/**/*.js", "types/**/*.d.ts"]
    },
    "generate-types": {
      "outputs": ["types/**/*.ts"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "type-check:functions": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "functions:serve": {
      "cache": false,
      "persistent": true
    }
  }
}
